package xlr.chapter04;

import java.util.Scanner;

/**
*@Author:小龙人
*@File Name:Test.java
*@Created Time:下午8:23:25
*@Introduce Function:TODO
*/
public class Test {
public static void main(String[] args){
	Scanner input = new Scanner (System.in);
	String answer = "Y"; //用户输入的是否继续
	String name = null;//给一个初值
	do{
		System.out.println("欢迎进入老旧武侠世界请大侠七个名号闯荡江湖");
		name = input.nextLine();
		System.out.println("头衔：初入江湖");
		System.out.println("江湖名号:" +name);
		System.out.println(name+"大侠，满意你的江湖名号吗？ （Y/n)");
		answer = input.nextLine();
	}while("Y".equalsIgnoreCase(answer));
	System.out.printf("[%s]大侠重入江湖，宵小之辈速速退避！\n", name);
	input.close();
	
	}
	
}

