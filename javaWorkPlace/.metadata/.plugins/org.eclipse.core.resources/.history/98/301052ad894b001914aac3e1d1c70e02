package ink.xlr.test;

import java.util.ArrayList;

/**
*@Author:小龙人
*@File Name:Box.java
*@Created Time:2019年3月21日上午11:23:53
*@Introduce Function:TODO
*/
public class Box {
	ArrayList<Fruit> flist = new ArrayList<Fruit>();
	//添加水果方法
	public void addFruit(Fruit fruit) {
		flist.add(fruit);
		
	}
	//取出水果方法
	public void  getFruit(Fruit fruit) {
		flist.remove(fruit);
		
	}
	//显示所有的水果
	public void show() {
		for(Fruit fruit : flist) {
			System.out.println(fruit);
		}
	}
	//显示某个水果
	public void showFruit(int index) {
		Fruit fruit = flist.get(index);
	}
		
	public static void main(String[] args) {
		Fruit f1 = new Apple("apple","red",3);
		Fruit f2 = new Pear("pear","blue",6);
	
		Box b = new Box();
		b.addFruit(f1);
		b.addFruit(f2);
		System.out.println("显示水果:...............");
		b.show();
		b.getFruit(f2);
		System.out.println("取出Pear水果后：............");
		b.show();
		System.out.println("取出Pear水果后：............");
		b.show();
	}
}
