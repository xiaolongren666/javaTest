package xlr.chapter03.section04;

import java.util.Scanner;

/**
*@Author:小龙人
*@File Name:Test1.java
*@Created Time:下午8:44:34
*@Introduce Function:TODO
*/
public class Test1 {
	/**
	 * 程序入口
	 * @param args
	 */
	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		String answer = "Y"; //用户输入的是否父继续
		do{
			System.out.println("是否继续?(Y/n)");
			answer = input.nextLine();
			//}while(answer.equals("Y"));//字符串比较时,不可以使==
			//}while(answer,equalsIgnoerCase("Y")); //忽略大小写比较
		}while("Y".equalsIgnoreCase(answer));//建议写法
		//input.close();
		}
}