	/**
	 * 程序入口
	 * @param args
	 */
	public static void main(String[] args) {
		// 电脑名称
		String userName = "大蛇";
		String comName = "小龙人";
		System.out.println(userName + "vs+" + comName);
		// 2初始化双方的数据(体力值默认100)
		// 双方的hp
		int hp1 = 100, hp2 = 100; 
		// 双方的攻击
		int attack1 = 0, attack2 = 0; 
		// 3使用循环模拟对战过程
		while (hp1 > 0 && hp2 >= 0) {
			// 生成双方的随即攻击力
			attack1 = new Random().nextInt(100);
			System.out.println("attack1=" + attack1);
			attack2 = random.nextInt() * 1000 % 11 + 5;
			System.out.println("attack2=" + attack2);
			// attack1 = (int) (Math.random() * 1000) % 11 + 5;
			// attack2 = (int) (Math.random() * 1000) % 11 + 5;
			// 让玩家先攻击
			// 玩家攻击，电脑掉血
			hp2 -= attack1; 

			hp1 -= attack2;
		}
	}
}